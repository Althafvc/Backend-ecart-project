                <label for=""><%=data.housename?data.housename:null%></label>
                  <input name="housename" type="radio" value="<%=data %>" class="addressSelect_id hs" id="<%=data%>" onclick="addressChanged(event,'<%=data._id%>','<%=data.housename%>','<%=data.housenumber%>','<%=data.city%>','<%=data.pincode%>')">
                  <!-- <input type="text" class="addressSelect_id_i" style="visibility: hidden;"> -->
  
              </div>
              <% }) %>
         <% }else{ %>
          <p>error</p>
        <% } %>
         

              <p class="m-0"><a href="/user/profile" id="submitBtn" class="button p-3"
                  style="background-color: black; color: white;">Add Address</a></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary bg-danger text-white" data-bs-dismiss="modal">
            Close
          </button>
          <!-- Add additional buttons or actions as needed -->
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>

  <script src="/postCheckout-Axios.js"></script>

  <script>

            const orderObj = {
                totalAmount:null,
                paymentMeth:null,
                orders:[]
              }

            const submitBtn = document.getElementById('continueBtn')
             submitBtn.addEventListener('click',async (event)=> {
            event.preventDefault()

            let paymentMethod
            document.querySelectorAll('.form-check-input').forEach(input =>{
                if(input.checked){
                    paymentMethod = input.id 
                }
            })

            if(!paymentMethod) {
                document.querySelector('.paymenterror').innerHTML = 'Please select a payment method'
            } else {
              let addressData
            document.querySelectorAll('.addressSelect_id').forEach(input=> {
                if(input.checked) {
                    addressData = input.id
                }
            })
           
            if(!addressData) {
              document.querySelector('.addresserror').innerHTML = 'Please select your shipping address'

            }else {
              
              const totalprice = document.getElementById('updatedPrice').textContent

              const products = JSON.parse(submitBtn.getAttribute('products'));

              const datas = document.getElementById('productDetails').innerHTML

              const productDatas = datas ? JSON.parse(datas) : null

              const size = productDatas ? productDatas.size : null
              const color = productDatas ? productDatas.color : null
              const quantity = productDatas ? productDatas.quantity : null

              orderObj.totalAmount=totalprice
              orderObj.paymentMeth=paymentMethod

              products.forEach((product) => {

                const singleOrderObj = {
                productId:product.id._id,
                size:product.size || size || null,
                color:product.color ||  color || null,
                quantity:product.quantity || quantity || 1,
                deliveryDate:new Date(),
                orderDate:new Date(),
                address:addressData,
                paymentMeth:paymentMethod,
                status:'confirmed'
              }
              orderObj.orders.push(singleOrderObj)
              })
              const response  = await axios.post(`/user/checkout`,{orderObj})

              const result = response.data
              if(result.COD) {
                window.location.href = `/user/orderconfirmotp?email=${result.email}`
              }else {
                var options = {
    "key": result.key, // Enter the Key ID generated from the Dashboard
    "amount": result.totalAmount, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
    "currency": "INR",
    "name": "Stylesphere",
    "description": "Test Transaction",
    "order_id": result.ordered._id, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
    "handler": function (response){
        window.location.href = '/user/onlineorderconfirmed'
    },
   
    "notes": {
        "address": "Razorpay Corporate Office"
    },
    "theme": {
        "color": "#3399cc"
    }
};
var rzp1 = new Razorpay(options);
rzp1.on('payment.failed', function (response){
        alert(response.error.code);
        alert(response.error.description);
        alert(response.error.source);
        alert(response.error.step);
        alert(response.error.reason);
        alert(response.error.metadata.order_id);
        alert(response.error.metadata.payment_id);
});

    rzp1.open();

              }
              
            }
           
          }
        })
  </script>

