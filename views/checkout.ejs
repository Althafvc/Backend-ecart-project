  <section class=" py-5" style="background-color:#f5f5f7;">
    <div class="container" style="background-color:#f5f5f7;">
      <div class="row">
        <div class="col-xl-8 col-lg-8 mb-4">
          <div class="card shadow-0 ">
            <div class="p-4" style="background-color:#f5f5f7;">
              <h5 class="card-title mb-3">checkout</h5>
              <div class="row">
                <form id="checkout-form">
                  <p class="error-msg"></p>
                  <div class="col-6">
                    <p class="mb-0">Full name</p>
                    <div class="form-outline">
                      <input name="name" type="text" id="typeText" class="username" value="<%=user.username%>"
                        class="form-control" required />
                    </div>
                  </div>

                  <div class="col-6 mb-3">
                    <p class="mb-0">Phone</p>
                    <div class="form-outline">
                      <input type="number" name="phone" id="typePhone" value="<%=user.phone%>" class="form-control"
                        required />
                    </div>
                  </div>
                  <div class="col-6 mb-3">
                    <input type="hidden" id="typeNumber" value="" name="address_Id" class="form-control address_id"
                      required />
                    <p class="mb-0">Email</p>
                    <div class="form-outline">
                      <input type="email" id="typeEmail" value="<%=user.email%>" name="email" class="form-control"
                        required />
                    </div>
                  </div>
              </div>
              <p class="errorAddress"></p>
              <div class="row">
                <div class="col-sm-8 mb-3">
                  <p class="mb-0">House Name</p>
                  <div class="form-outline">
                    <input type="text" id="typeText" placeholder="Type here" name="address"
                      value="<%=address.housename%>" class="form-control address-field housename" required />
                  </div>
                </div>

                <div class="col-sm-4 mb-3">
                  <p class="mb-0">City</p>
                  <div class="form-outline">
                    <input type="text" id="typeText" value="<%=address.city%>" name="city" placeholder="city"
                      class="form-control city-field city" required />
                  </div>
                </div>

                <div class="col-sm-4 mb-3">
                  <p class="mb-0">House NO.</p>
                  <div class="form-outline">
                    <input name="houseNo" type="text" id="typeText" placeholder="Type here"
                      value="<%=address.housenumber%>" class="form-control house_no-field houseno
                      " required />
                  </div>
                </div>

                <div class="col-sm-4 col-6 mb-3">
                  <p class="mb-0">Postal code</p>
                  <div class="form-outline">
                    <input type="text" id="typeText" name="postalCode" class="form-control postalcode-field pin"
                      value="<%=address.pincode%>" required />
                  </div>
                </div>

              </div>


              <div class=" mb-3">
<div class="addresserror" style="color: red; font-size: 14px;"></div>
                <p class="text-dark  mb-5 h">

                  <a href="#" data-bs-toggle="modal" data-bs-target="#changeAddressModal"
                    style="color: #232F3E;text-decoration: underline;">Select Address</a>

                </p>

              </div>

              <div class="mb-3">
                <h5>Select Payment Method</h5>
                 <div class="paymenterror" style="color: red; font-size: 14px;"></div>
                <!-- Credit Card Payment -->
                <div class="form-check mb-3">
                  <input class="form-check-input payment" type="radio" name="payment" id="creditCardPayment"
                    value="onlinepayment">
                  <label class="form-check-label d-flex align-items-center" for="creditCardPayment">
                    Online Payment
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input payment" type="radio" name="payment" id="COD" value="COD">
                  <label class="form-check-label d-flex align-items-center" for="payment2">
                    Cash On Delivery (COD)
                  </label>
                </div>
              </div>

              <div class="float-end">
                <div class="container">
                  <div class="row">


                    <input type="text" id="totalsum" hidden name="totalsum" value="">
                    <button type="button" class="btn shadow-0 border"

                      style="color: antiquewhite; background-color: #232F3E;" id="continueBtn" products='<%= JSON.stringify(cartedOnes) %>'>Continue</button>
                    
                  </div>
                </div>
                </form>
              </div>
            </div>
          </div>
          <!-- Checkout -->
        </div>
        <div class="col-xl-4 col-lg-4 d-flex justify-content-center justify-content-lg-end">
          <div class="ms-lg-4 mt-4 mt-lg-0" style="max-width: max-content; margin-left: 9px;">
            <div>
              <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Your Products</span>

              </h4>
              <ul class="list-group mb-3 sticky-top">


                <% cartedOnes.forEach((data)=>{ %>
                  <li class="list-group-item d-flex justify-content-between lh-condensed" style="height: 100px;">
                    <div>
                      <img src="/uploads/products/<%=data.id.product_img[0]%>" alt="" width="60px" height="60px">
                    </div>
                    <div>
                      <h6 class="my-0">
                        <%=data.id.productname%>
                      </h6>
                      <small class="text-muted">Qty:</small>
                      <select name="color" id="qtyChange">
                        <% for (i=1;i<=5;i++){ %>
                          <option value="<%=i%>">
                            <%=i%>
                          </option>
                          <% } %>
                      </select>
                      <small class="text-muted">Color: <%=data.color%></small>

                      <small class="text-muted">Size: <%=data.size%></small>

                      <span class="text-muted ms-4">$ <%=data.id.oldprice%></span>
                    </div>
                  </li>
                  <% }) %>
              </ul>

            </div>

            <div class="d-flex justify-content-between">
            <h6 class="mb-3" id="summary">Summary</h6>
            <h6 class="mb-3" id="camount"></h6>

          </div>
            <div class="d-flex justify-content-between">
              <p class="mb-2">Price:</p>
              <p class="mb-2" id="Amount">
                <%=Amount%>
              </p>
            </div>
            <div class="d-flex justify-content-between">
              <p class="mb-2">Discount:</p>
              <p class="mb-2 text-danger" id="discount">-₹ <%=discount%>
              </p>
            </div>
            <div class="d-flex justify-content-between">
              <p class="mb-2" style="display: none;" id="co">Coupon Code:</p>
              <p class="mb-2 text-success" id="couponDis"></p>
            </div>

            <div class="d-flex justify-content-between">
              <p id="coupon" style="color: red;"></p>
            </div>
            <hr />
            <div class="d-flex justify-content-between">
              <p class="mb-2">Total price:</p>
              <p class="mb-2 fw-bold"><span>₹</span><span id="updatedPrice">
                  <%=totalPrice%>
                </span>
              </p>
            </div>

            <div class="input-group mt-3 mb-4 ">
              <form id="promo-code-form" class="d-flex" style="gap: 2rem;">
                <p class="couponError" style="color: red; text-align: center;"></p>
                <div>
                  <input type="number" hidden id="price1" value="" name="totalsum">

                  <input type="text" class="form-control border" name="coupongot" id="coupon-input"
                    placeholder="Promo code" />
                  <ul class="mt-2" style="list-style: none; ">
                    <% coupons.forEach((data)=>{ %>
                      <% if (data.availability=="All users" && data.minimumpurchaseamount <=Amount) { %>
                        <li style="background-color: #f5f5f7 !important;">
                          <input type="radio" name="couponcode" value="<%=data.couponcode%>" id="couponradio" class="couponInput" onclick="couponSelect(event)">
                          <label for="" class="couponCode">
                            <%=data.couponcode%>
                          </label>

                        </li>
                        <% } %>
                          <% }) %>
                  </ul>
                </div>
                <div style="display: none;" id="productDetails"><%- JSON.stringify(singleProductDetails) %></div>
                <div class="mt-1"> <button type="button" class="btn btn-light text-primary border" id="applyBtn"
                    onclick="applyPromoCode(event)">Apply</button></div>
              </form>
            </div>
          </div>
        </div>
      </div>
  </section>
  <div class="modal fade" id="changeAddressModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
